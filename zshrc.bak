# Created by newuser for 5.9
# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=100
SAVEHIST=200
bindkey -e
# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle :compinstall filename '/home/rk/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

# Designing the prompt
# Loading version control information
autoload -Uz vcs_info
precmd() { vcs_info }
zstyle ':vcs_info:git:*' formats 'on %F{#ff007f}(%b)%f'
setopt PROMPT_SUBST # Enable prompt substitution
PROMPT='%B%F{cyan}%2~/%f%b %B${vcs_info_msg_0_}%b%B%F{cyan}: %f%b'

# Default aliases
alias vim='nvim'
alias vi='nvim'
alias nv='nvim'

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Additional aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Lock command
alias lock='i3lock --color 000000'

# Bluetooth manager commands
alias blu='systectl start bluetooth'
alias noblu='systemctl stop bluetooth'
# Brightness controls
alias bri30='brightnessctl s 30%'
alias bri60='brightnessctl s 60%'
alias bri='brightnessctl 100%'

alias rng='ranger'

# Workspace Manager commands
alias tut='cd ~/workspace/github.com/IAmRiteshKoushik/tut && ls'
alias dev='cd ~/workspace/github.com/IAmRiteshKoushik/dev && ls'
alias dsa='cd ~/workspace/github.com/IAmRiteshKoushik/dsa && ls'
alias hack='cd ~/workspace/github.com/IAmRiteshKoushik/hack && ls'

# Accessing time-table (depends on file path)
alias tt='xdg-open ~/RK/tt.pdf'

# Exit short-cut
alias x='exit'
